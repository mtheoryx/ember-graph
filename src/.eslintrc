{
	"extends": "../.eslintrc",

	"ecmaFeatures": {
		"arrowFunctions": true,
		"blockBindings": true,
		"defaultParams": true,
		"destructuring": true,
		"modules": true,
		"objectLiteralComputedProperties": true,
		"objectLiteralDuplicateProperties": true,
		"objectLiteralShorthandMethods": true,
		"objectLiteralShorthandProperties": true,
		"restParams": true,
		"spread": true,
		"templateStrings": true
	},

	"env": {
		"browser": true,
		"es6": true
	},

	"rules": {
		"arrow-parens": [2, "always"],
		"arrow-spacing": [2, { "before": true, "after": true }],
		"no-const-assign": 2
		// To be enabled over time
		//"no-var": 2,
		//"object-shorthand": 2,
		//"prefer-arrow-callback": 2,
		//"prefer-const": 2,
		//"prefer-template": 2
	}
}